<form action="/filter">
  <div class="row">
    <div class="col-auto mr-auto my-2">
      <span>總金額:</span>
      <h3 style="display: inline;">{{totalAmount}}</h3>
    </div>
    <div class="col-auto">
      <div class="d-flex align-items-center">
        <i class="far fa-clock mx-2"></i>
        <select class="custom-select" onchange="this.form.submit()" name="period">
          <option value="today">今天</option>
          <option value="recentMonth">最近一個月</option>
          <option value="recentHalfYear">最近半年</option>
          <option value="recentYear">最近一年</option>
        </select>
      </div>
    </div>
    <div class="col-auto">
      <div class="d-flex align-items-center">
        <i class="fas fa-sort-amount-down mx-2"></i>
        <select class="custom-select" onchange="this.form.submit()" name="sort">
          <option value="date">日期</option>
          <option value="amount">金額</option>
        </select>
      </div>
    </div>
    <div class="col-auto">
      <div class="d-flex align-items-center">
        <i class="fas fa-tag mx-2"></i>
        <select class="custom-select" onchange="this.form.submit()" name="category">
          {{#each categories}}
          <option value="{{this.value}}" {{#ifEquals ../targetCategory this.value}} selected {{/ifEquals}}>
            {{this.title}}</option>
          {{/each}}
        </select>
      </div>
    </div>
  </div>
</form>

{{!-- expense items --}}
<ul class="list-group">
  {{#each records}}
  <li class="list-group-item">
    <div class="row">
      <div class="col-sm-7 mr-auto">
        <div class="row">
          <div class="d-flex flex-column justify-content-center align-items-center" style="width: 50px;">
            {{{ this.categoryIcon }}}</div>
          <div class="col-auto mr-auto">
            <div class="row" style="font-size: 1.1em;">{{ this.name }}</div>
            <div class="row">
              <small>{{ this.date }}</small>
            </div>
          </div>
          <div class="col-auto d-flex flex-column justify-content-center">
            NT {{ this.amount }}
          </div>
        </div>

      </div>
      <div class="col-sm-5 d-flex align-items-center justify-content-end">
        <a class="btn btn-outline-secondary mx-2" href="./records/{{ this._id }}/edit" style="border: none;">
          <i class="far fa-edit"></i>
        </a>
        <form action="./records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
          <button class="btn btn-outline-danger" type="submit" style="border: none;">
            <i class="far fa-trash-alt"></i>
          </button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>