{{!-- 顯示總金額、設定篩選條件 --}}
{{> message}}
<form id="filter">
  <div class="row my-3">
    <div class="col-auto mr-auto d-flex align-items-center">
      <span class="mr-2">總支出: </span>
      <h2 class="total-amount" style="color: #c0392b; display: inline;"> {{totalAmount}}</h2>
    </div>
    {{!-- 期間 --}}
    <div class="col-auto">
      <div class="d-flex align-items-center">
        <i class="far fa-clock mx-2"></i>
        <input type="month" class="custom-select" name="period" value="{{this.period}}">
      </div>
    </div>
    {{!-- 排序 --}}
    <div class="col-auto">
      <div class="d-flex align-items-center">
        <i class="fas fa-sort-amount-down mx-2"></i>
        <select class="custom-select" name="sort">
          {{#each sorts}}
          <option value="{{@key}}" {{#if (equal ../sort @key)}} selected {{/if}}>
            {{this}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    {{!-- 類別 --}}
    <div class="col-auto">
      <div class="d-flex align-items-center">
        <i class="fas fa-tag mx-2"></i>
        <select class="custom-select" name="categoryValue" id="category-tag">
          {{#each categories}}
          <option value="{{this.value}}" {{#if (equal ../categoryValue this.value)}} selected {{/if}}>
            {{this.title}}</option>
          {{/each}}
        </select>
      </div>
    </div>
  </div>
</form>

<div class="d-flex align-items-center justify-content-between mb-2">
  <div class="mr-2">📅
    <h5 class="m-0 duration" style="display: inline;">{{formatDuration duration}}</h5>
  </div>
  <div class="d-flex" id="type-panel">
    <button class="type btn active" id="all">全部</button>
    <button class="type btn" id="expense">支出</button>
    <button class="type btn" id="income">收入</button>
  </div>
</div>

{{!-- 支出列表 --}}
<ul class="list-group" id="record-panel">
  {{#if records}}
  {{#each records}}
  <li class="list-group-item record" data-id={{ this._id }}>
    <div class="row">
      <div class="col-sm-7 mr-auto">
        <div class="row">
          <div class="d-flex flex-column justify-content-center align-items-center"
            style="width: 50px; transform: scale(0.9);">
            {{{ this.category.icon }}}</div>
          <div class="col-auto mr-auto">
            <div class="row" style="font-size: large;">{{ this.name }} / {{ this.merchant }}</div>
            <div class="row">
              <small>{{ formatDate this.date }}</small>
            </div>
          </div>
          <div class="col-auto d-flex flex-column justify-content-center amount" data-amount={{ this.amount }}>
            NT {{ this.amount }}
          </div>
        </div>

      </div>
      <div class="col-sm-5 d-flex align-items-center justify-content-end">
        <a class="btn btn-outline-secondary mx-2" href="/records/{{ this._id }}/edit" style="border: none;">
          <i class="far fa-edit"></i>
        </a>
        <button class="btn btn-outline-danger delete" style="border: none;">
          <i class="far fa-trash-alt delete"></i>
        </button>
      </div>
    </div>
  </li>
  {{/each}}
  {{else}}
  <div class="d-flex justify-content-center mt-5">
    <h4>成功守住錢包 🤑</h4>
  </div>
  {{/if}}
</ul>