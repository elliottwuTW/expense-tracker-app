<div class="row mt-4">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-2">Login</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter email..."
            value="{{ email }}">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter password...">
        </div>
        <button type="submit" class="btn btn-info btn-block">Login</button>
        <div class="d-flex justify-content-around mt-2">
          <a href="/auth/facebook" class="btn btn-primary btn-circle"><i class="fab fa-facebook fa-2x"></i></a>
          <a href="/auth/google" class="btn btn-danger btn-circle"><i class="fab fa-google fa-2x"></i></a>
        </div>
      </form>
      <p class="lead mt-1">
        <small>Don't have an account? <a href="/users/register">Register</a></small>
      </p>
    </div>
  </div>
</div>